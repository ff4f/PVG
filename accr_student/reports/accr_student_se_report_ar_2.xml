                        <div class="col-12 h3" style="text-align: center;">
                            <span>تقرير التربية الخاصة</span>
                        </div>
                    </div>
                    <br/>
                    <br/>

                    <t t-foreach="docs" t-as="doc">
                        <!-- Report row content -->
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <Strong>اسم الطالب: </Strong>
                                </span>
                                <span t-field="doc.arabic_name"/>
                            </div>
                            <div class="col-6">
                                <span>
                                    <Strong>اسم الطالب بالانجليزية: </Strong>
                                </span>
                                <span t-field="doc.name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <Strong>تاريخ الالتحاق: </Strong>
                                </span>
                                <span t-field="doc.joining_date"/>
                            </div>
                            <div class="col-6">
                                <span>
                                    <Strong>تاريخ الميلاد: </Strong>
                                </span>
                                <span t-field="doc.birth_date"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <Strong>رقم الملف: </Strong>
                                </span>
                                <span t-field="doc.file_no"/>
                            </div>
                            <div class="col-6">
                                <span>
                                    <Strong>الجنس: </Strong>
                                </span>
                                <span t-field="doc.gander"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>التشخيص: </Strong>
                                </span>
                                <span t-field="doc.diagnosis"/>
                            </div>
                        </div>
                        <hr/>
                        <div class="row" style="page-break-after:always">
                            <dic class="col-12">
                                <h4>التقرير الوصفي</h4>
                                <br/>
                                <span t-field="doc.desc"/>
                            </dic>
                        </div>
                        <h4>المجالات</h4>
                        <t t-foreach="doc.report_categories" t-as="category" t-if="category">
                            <div class="row" style="border-style: groove;">
                                <div class="col-2" style="background-color: aliceblue; border-right-style: groove;">
                                    <h5 t-field="category.report_category"/>
                                </div>
                                <div class="col-10">

                                    <t t-foreach="category.report_l_goals" t-as="report_l_goal">
                                        <t t-set="long_term_goal_id" t-value="report_l_goal.id"/>
                                        <t t-set="long_term_goal_name" t-value="report_l_goal.educational_plan.x_name"/>
                                        <t t-set="chart_name" t-value="'g_'+str(long_term_goal_id)"/>
                                        <t t-set="chart_gr_name" t-value="'gr_'+str(long_term_goal_id)"/>
                                        
                                        <script type="text/javascript">
                                            <t t-esc="chart_gr_name"/> = [{ key: 'No Response', values: [] }, { key: 'Physical Full-Help', values: [] }, { key: 'Physical Partial-Help', values: [] }, { key: 'Modeling', values: [] },
                                        { key: 'Virbal Full-Help', values: [] }, { key: 'Virbal Partial-Help', values: [] }, { key: 'Geature', values: [] }, { key: 'Indepindant', values: [] }];
                                            
                                            <t t-set="no_response" t-value="0"/>
                                            <t t-set="physical_fh" t-value="0"/>
                                            <t t-set="physical_ph" t-value="0"/>
                                            <t t-set="modeling" t-value="0"/>
                                            <t t-set="verbal_fh" t-value="0"/>
                                            <t t-set="verbal_ph" t-value="0"/>
                                            <t t-set="gesture" t-value="0"/>
                                            <t t-set="independent" t-value="0"/>
                                            
                                            <t t-set="short_term_goal_sequence" t-value="0"/>
                                            <t t-foreach="report_l_goal.short_term_goals.sorted(key=lambda r: r.sequence)" t-as="short_term_goal">
                                                
                                                <t t-set="no_response" t-value="0"/>
                                                <t t-set="physical_fh" t-value="0"/>
                                                <t t-set="physical_ph" t-value="0"/>
                                                <t t-set="modeling" t-value="0"/>
                                                <t t-set="verbal_fh" t-value="0"/>
                                                <t t-set="verbal_ph" t-value="0"/>
                                                <t t-set="gesture" t-value="0"/>
                                                <t t-set="independent" t-value="0"/>

                                                <t t-set="last_try_date" t-value=""/>
                                                
                                                <t t-set="short_term_goal_sequence" t-value="short_term_goal_sequence + 1"/>
                                            
                                                <t t-foreach="short_term_goal.response_forms" t-as="response_form">
                                                
                                                
                                                    <t t-foreach="response_form.x_studio_attempts_table" t-as="attempts_table">
                                                        <t t-foreach="attempts_table.x_studio_response_form_row" t-as="response_row">
                                                            <t t-if="response_row.x_studio_help_type_no == 1" t-set="no_response" t-value="no_response + 1"/>
                                                            <t t-if="response_row.x_studio_help_type_no == 2" t-set="physical_fh" t-value="physical_fh + 1"/>
                                                            <t t-if="response_row.x_studio_help_type_no == 3" t-set="physical_ph" t-value="physical_ph + 1"/>
                                                            <t t-if="response_row.x_studio_help_type_no == 4" t-set="modeling" t-value="modeling + 1"/>
                                                            <t t-if="response_row.x_studio_help_type_no == 5" t-set="verbal_fh" t-value="verbal_fh + 1"/>
                                                            <t t-if="response_row.x_studio_help_type_no == 6" t-set="verbal_ph" t-value="verbal_ph + 1"/>
                                                            <t t-if="response_row.x_studio_help_type_no == 7" t-set="gesture" t-value="gesture + 1"/>
                                                            <t t-if="response_row.x_studio_help_type_no == 8" t-set="independent" t-value="independent + 1"/>

                                                            <t t-set="last_try_date" t-value="response_row.x_studio_date_time"/>
                                                        </t>
                                                    </t>
                                                </t>

                                                var lst_try_date = '<t t-esc="last_try_date"/>';
                                                lst_try_date = lst_try_date.slice(0, 10)
                                                var short_term_goal_name = '<t t-esc="short_term_goal_sequence"/> - '+ lst_try_date;
                                                short_term_goal_name = '<t t-esc="short_term_goal_sequence"/>';
                                                
                                                <t t-esc="chart_gr_name"/>[0].values.push({"label": short_term_goal_name, "value": <t t-esc="no_response"/>});
                                                <t t-esc="chart_gr_name"/>[1].values.push({"label": short_term_goal_name, "value": <t t-esc="physical_fh"/>});
                                                <t t-esc="chart_gr_name"/>[2].values.push({"label": short_term_goal_name, "value": <t t-esc="physical_ph"/>});
                                                <t t-esc="chart_gr_name"/>[3].values.push({"label": short_term_goal_name, "value": <t t-esc="modeling"/>});
                                                <t t-esc="chart_gr_name"/>[4].values.push({"label": short_term_goal_name, "value": <t t-esc="verbal_fh"/>});
                                                <t t-esc="chart_gr_name"/>[5].values.push({"label": short_term_goal_name, "value": <t t-esc="verbal_ph"/>});
                                                <t t-esc="chart_gr_name"/>[6].values.push({"label": short_term_goal_name, "value": <t t-esc="gesture"/>});
                                                <t t-esc="chart_gr_name"/>[7].values.push({"label": short_term_goal_name, "value": <t t-esc="independent"/>});
                                            </t>
                                        </script>
                                        <div class="row">
                                            <div class="col-12" style="background-color: aliceblue;">
                                                <strong t-esc="long_term_goal_name"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12">
                                                <table>
                                                    <thead>
                                                        <tr style="background-color: aliceblue;">
                                                            <th style="width: 5%; text-align:center; border-right-style: groove; border-bottom-style: groove;">
                                                                <span>مسلسل</span>
                                                            </th>
                                                            <th style=" width: 40%; text-align:center; border-right-style: groove; border-bottom-style: groove;">
                                                                <span>المهارة</span>
                                                            </th>
                                                            <th style="width: 10%; text-align:center; border-right-style: groove; border-bottom-style: groove;">
                                                                <span>التحقق</span>
                                                            </th>
                                                            <th style="width: 15%; text-align:center; border-right-style: groove; border-bottom-style: groove;">
                                                                <span>تاريخ التحقق</span>
                                                            </th>
                                                            <th style="width: 30%; text-align:center; border-right-style: groove; border-bottom-style: groove; border-left-style: groove;">
                                                                <span>ملاحظات</span>
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <t t-set="short_term_goal_no" t-value="0"/>
                                                        <t t-set="last_try_date" t-value=""/>
                                                        <t t-foreach="report_l_goal.short_term_goals.sorted(key=lambda r: r.sequence)" t-as="short_term_goal">
                                                            <tr>
                                                                <td style="border-right-style: groove; border-bottom-style: groove;">
                                                                    <t t-set="short_term_goal_no" t-value="short_term_goal_no + 1"/>
                                                                    <span><t t-esc="short_term_goal_no"/></span>
                                                                </td>
                                                                <td style="border-right-style: groove; border-bottom-style: groove;">
                                                                    <span t-field="short_term_goal.short_term_goal"/>
                                                                </td>
                                                                <td style="border-right-style: groove; border-bottom-style: groove;">
                                                                    <t t-if="short_term_goal.goal_achieved == 'Achieved'">
                                                                        <span>تحقق</span>
                                                                    </t>
                                                                    <t t-elif="short_term_goal.goal_achieved == 'Achieved With Help'">
                                                                        <span>تحقق بمساعدة</span>
                                                                    </t>
                                                                    <t t-elif="short_term_goal.goal_achieved == 'Not Achieved'">
                                                                        <span>لم يتحقق</span>
                                                                    </t>
                                                                    <t t-else="">
                                                                        <span t-field="short_term_goal.goal_achieved"/>
                                                                    </t>
                                                                </td>
                                                                <t t-if="short_term_goal.goal_achieved == 'Achieved' or short_term_goal.goal_achieved == 'Achieved With Help'">
                                                                    <t t-foreach="short_term_goal.response_forms" t-as="response_form">
                                                                        <t t-foreach="response_form.x_studio_attempts_table" t-as="attempts_table">
                                                                            <t t-foreach="attempts_table.x_studio_response_form_row" t-as="response_row">
                                                                                <t t-set="last_try_date" t-value="str(response_row.x_studio_date_time).split(' ')"/>
                                                                            </t>
                                                                        </t>
                                                                    </t>
                                                                </t>
                                                                <t t-else="">
                                                                    <t t-set="last_try_date" t-value=""/>
                                                                </t>
                                                                <td style="border-right-style: groove; border-bottom-style: groove;">
                                                                    <t t-if="last_try_date and last_try_date != ''">
                                                                        <span>
                                                                            <t t-esc="last_try_date[0]"/>
                                                                        </span>
                                                                    </t>
                                                                </td>
                                                                <td style="border-right-style: groove; border-bottom-style: groove; border-left-style: groove;">
                                                                    <span t-field="short_term_goal.notes"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <br/>
                                        <div class="row">
                                            <div class="col-12">
                                                <div t-att-id="chart_name">
                                                    <svg style="height: 500px; width: 800px; text-align: left!important; direction: ltr;"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" style="page-break-after:always;">
                                            <div class="col-12">
                                                <span>ملاحظات</span>
                                                <br/>
                                                <span t-field="report_l_goal.notes" />
                                            </div>
                                        </div>
                                        <script type="text/javascript">
                                            nv.addGraph(function () {
                                                var <t t-esc="chart_name"/> = nv.models.multiBarChart()
                                                    .x(function(d) { return d.label })    //Specify the data accessors.
                                                    .y(function(d) { return d.value })
                                                    .showControls(false)
                                                    .rotateLabels(0)
                                                    .reduceXTicks(false)
                                                    .groupSpacing(0.3)
                                                    .useInteractiveGuideline(true)
                                                    .clipEdge(true)
                                                ;

                                                <t t-esc="chart_name"/>.xAxis
                                                    .axisLabel("Goal No")
                                                ;

                                                <t t-esc="chart_name"/>.yAxis
                                                    .axisLabel("Count of Attempts")
                                                    .ticks(10)
                                                ;

                                                _chart_name = '<t t-esc="chart_name"/>'
                                                d3.select('#'+_chart_name+' svg')
                                                    .datum(<t t-esc="chart_gr_name"/>)
                                                    .call(<t t-esc="chart_name"/>);

                                                nv.utils.windowResize(<t t-esc="chart_name"/>.update);

                                                return <t t-esc="chart_name"/>;
                                                });
                                        </script>
                                    </t>
                                </div>
                            </div>
                            <br/>
                        </t>
                    </t>

