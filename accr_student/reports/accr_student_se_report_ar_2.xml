    <report id="accr_student_special_education_report_ar_2" string="تقرير التربية الخاصة 2" model="accr.student.se.report" report_type="qweb-html" paperformat="base.paperformat_us" name="accr_student.report_accr_student_se_report_ar_2_template" />
